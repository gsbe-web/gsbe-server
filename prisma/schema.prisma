generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Event {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  imageId     String    @unique
  imageUrl    String?   @unique
  title       String
  date        DateTime
  location    String
  description String?
  slug        String    @unique
  createdAt   DateTime? @default(now())
  updatedAt   DateTime? @updatedAt
}

model Publication {
  id              String    @id @default(auto()) @map("_id") @db.ObjectId
  username        String
  dateTimePosted  DateTime
  profileImageUrl String
  postImageId     String    @unique
  postImageUrl    String?   @unique
  title           String
  content         String
  views           Int       @default(0)
  comments        Int       @default(0)
  likes           Int       @default(0)
  slug            String    @unique
  createdAt       DateTime? @default(now())
  updatedAt       DateTime? @updatedAt
}

model Member {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  slug         String    @unique
  type         String
  name         String
  role         String?
  description  String?
  imageId      String?   @unique
  imageUrl     String?   @unique
  email        String?   @unique
  linkedinUrl  String?   @unique
  twitterUrl   String?   @unique
  instagramUrl String?   @unique
  createdAt    DateTime? @default(now())
  updatedAt    DateTime? @updatedAt
}
