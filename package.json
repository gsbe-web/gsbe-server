    "dotenv": "^16.5.0",
    "googleapis": "^150.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "multer": "^2.0.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "streamifier": "^0.1.1"
  },
  "devDependencies": {
